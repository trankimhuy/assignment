<% @title = 'Login' %>
<h3 style="text-align:center"><%= notice %></h3>

<%= form_for(:session, url: login_path, :html => { :class => 'form-signin' } ) do |f| %>

  <h2 class="form-signin-heading">Please sign in</h2>
  <label for="inputEmail" class="sr-only">Email address:</label>
  <%= f.email_field :email, :placeholder => "Email address", :id => "inputEmail", :class => "form-control", :required => true, :autofocus => true %>

  <label for="pwd" class="sr-only">Password:</label>
  <%= f.password_field :password, :placeholder => "Password", :id => "inputPassword", :class => "form-control" %>

  <div class="checkbox">
    <label>
      <%= check_box_tag :remember_me %> Remember me
    </label>
  </div>
  <%= f.submit "Log in", :class => "btn btn-lg btn-primary btn-block" %>

<% end %>
